<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Application.RfidMenu.PairBlockAndUnit.PairBlockAndUnitUpdateBlockAndUnit">


    <TextView
        android:id="@+id/Title_Textview_PairBlockAndUnitUpdateBlockAndUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/baibold"
        android:text="@string/DetailTitle_TextView"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/TagCode_PairBlockAndUnitUpdateBlockAndUnit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Title_Textview_PairBlockAndUnitUpdateBlockAndUnit">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:ems="10"
                android:fontFamily="@font/baibold"
                android:text="@string/TagCode_TextView"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                style="@android:style/Widget.EditText"
                android:background="@null"
                android:id="@+id/ShowTagCode_TextView_PairBlockAndUnitUpdateBlockAndUnit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:layout_marginStart="10dp"
                android:autoSizeTextType="none"
                android:ems="10"
                android:hint="@string/TagCodeHint_TextView"
                android:fontFamily="@font/bai"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="15sp" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ScanRfid_Button_PairBlockAndUnitUpdateBlockAndUnit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:fontFamily="@font/baibold"
                android:text="@string/Scan_Button"
                android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/RfidCode_PairBlockAndUnitUpdateBlockAndUnit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TagCode_PairBlockAndUnitUpdateBlockAndUnit">



            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:ems="10"
                android:fontFamily="@font/baibold"
                android:text="@string/Rfid_TextView"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                style="@android:style/Widget.EditText"
                android:background="@null"
                android:id="@+id/ShowRfid_TextView_PairBlockAndUnitUpdateBlockAndUnit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:layout_marginStart="10dp"
                android:autoSizeTextType="none"
                android:ems="10"
                android:hint="@string/RfidHint_TextView"
                android:fontFamily="@font/bai"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/UnitName_PairBlockAndUnitUpdateBlockAndUnit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RfidCode_PairBlockAndUnitUpdateBlockAndUnit">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:ems="10"
                android:fontFamily="@font/baibold"
                android:text="@string/Unit_TextView"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                style="@android:style/Widget.EditText"
                android:background="@null"
                android:id="@+id/ShowUnitCode_TextView_PairBlockAndUnitUpdateBlockAndUnit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:layout_marginStart="10dp"
                android:autoSizeTextType="none"
                android:ems="10"
                android:hint="@string/UnitHint_TextView"
                android:fontFamily="@font/bai"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="15sp" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ScanBlockAndUnit_Button_PairBlockAndUnitUpdateBlockAndUnit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:fontFamily="@font/baibold"
            android:text="@string/Scan_Button"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/BlockCode_PairBlockAndUnitUpdateBlockAndUnit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UnitName_PairBlockAndUnitUpdateBlockAndUnit">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:ems="10"
                android:fontFamily="@font/baibold"
                android:text="@string/Block_TextView"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                style="@android:style/Widget.EditText"
                android:background="@null"
                android:id="@+id/ShowBlockCode_TextView_PairBlockAndUnitUpdateBlockAndUnit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:layout_marginStart="10dp"
                android:autoSizeTextType="none"
                android:ems="10"
                android:hint="@string/BlockHint_TextView"
                android:fontFamily="@font/bai"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="15sp" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Submit_Button_PairBlockAndUnitUpdateBlockAndUnit"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:background="#85C1E9"
        android:fontFamily="@font/baibold"
        android:text="@string/SubmitForUpdate_Button"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BlockCode_PairBlockAndUnitUpdateBlockAndUnit"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>